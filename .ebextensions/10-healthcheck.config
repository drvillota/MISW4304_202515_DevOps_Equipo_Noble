option_settings:
  # Classic Load Balancer fallback (older environments)
  - namespace: aws:elasticbeanstalk:application
    option_name: HealthCheckURL
    value: /

  # Application Load Balancer health check (modern EB)
  - namespace: aws:elasticbeanstalk:environment:process:default
    option_name: HealthCheckPath
    value: /
  - namespace: aws:elasticbeanstalk:environment:process:default
    option_name: MatcherHTTPCode
    value: 200

  # Target Group health check tuning (ALB)
  - namespace: aws:elbv2:targetgroup
    option_name: HealthCheckIntervalSeconds
    value: '15'
  - namespace: aws:elbv2:targetgroup
    option_name: HealthCheckTimeoutSeconds
    value: '5'
  - namespace: aws:elbv2:targetgroup
    option_name: HealthyThresholdCount
    value: '3'
  - namespace: aws:elbv2:targetgroup
    option_name: UnhealthyThresholdCount
    value: '5'